<UserControl
    x:Class="DataScienceStudio.Controls.Project.ProjectWorkspace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataScienceStudio.Controls.Project"
    xmlns:uwpToolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:localg="using:DataScienceStudio.Controls.Grid"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto"/>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto" />
         <RowDefinition Height="*"/>
         <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush }" 
                  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
         <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
         </Grid.ColumnDefinitions>
         <StackPanel Orientation="Horizontal">
            <TextBlock Text="Loading" Name="RowCount" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Padding="10 0 5 0" />
            <TextBlock Text="rows" Name="RowCountLabel" VerticalAlignment="Center" />
         </StackPanel>
         <CommandBar  x:Name="PrimaryCommandBar" IsOpen="False" HorizontalAlignment="Right" Grid.Column="1"/>
      </Grid>
       
      <uwpToolkit:Expander Grid.Column="0" Grid.Row="1"  Header="Data Sources"
                           IsExpanded="False" ExpandDirection="Right">
         <local:DataSources x:Name="DataSources"/>
      </uwpToolkit:Expander>


      <localg:GridView Grid.Column="1" Grid.Row="1" x:Name="TabularDataGrid"/>

      <uwpToolkit:Expander x:Name="Transforms" Grid.Column="2" Grid.Row="1" Header="Transforms"
                           IsExpanded="True" ExpandDirection="Left">

         
      </uwpToolkit:Expander>

      <uwpToolkit:Expander x:Name="Explorers" Grid.Row="2" Grid.ColumnSpan="3" Header="Explorers"
                           IsExpanded="False" ExpandDirection="Down">


      </uwpToolkit:Expander>


   </Grid>

   
</UserControl>
